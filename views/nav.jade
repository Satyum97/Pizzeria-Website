                    i(class="glyphicon glyphicon-home")
    else
        a.navbar-brand(href="#/trial") Welcome #{user.username}
 
        #navbar-inverse.collapse.navbar-collapse
        ul.nav.navbar-nav
                li.active: a(href="/logout") Logout 
                    i(class="glyphicon glyphicon-log-out")
