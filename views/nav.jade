extends layout

block navbar
  if (!user)
 
        #navbar-inverse.collapse.navbar-collapse
        ul.nav.navbar-nav
                li.active: a(href="/login") Login 
                   i(class="glyphicon glyphicon-log-in")
                li: a(href="/register") Register
  else


    if (user.username=="admin") 
       
        a.navbar-brand(href="/#/") Hi #{user.username}
 
        #navbar-inverse.collapse.navbar-collapse
        ul.nav.navbar-nav
                li.active: a(href="/logout") Logout 
                    i(class="glyphicon glyphicon-log-out")
